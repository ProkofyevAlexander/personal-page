{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": false
  },
  "awesomeTypescriptLoaderOptions": {
    "silent": true
  },
  "exclude": [
    "src/main.aot.ts",
    "compiled",
    "node_modules"
  ]
}