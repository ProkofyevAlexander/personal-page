nav(class="navbar navbar-default" id="navbar" role="navigation")&attributes({
    '[class.fixed]': 'navBarIsFixed'
})

    // Brand and toggle get grouped for better mobile display
    div(class="navbar-header")
        button(type="button" class="navbar-toggle")&attributes({
            '(click)': 'navBarCollapsed = !navBarCollapsed'
        })
            span(class="sr-only") Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")

    // Collect the nav links, forms, and other content for toggling
    div(class="collapse navbar-collapse")&attributes({
        '[class.in]': '!navBarCollapsed'
    })
        ul(class="nav navbar-nav")
            li&attributes({"*ngFor":"let pagePart of pageParts"})
                a(href="{{ '#' + pagePart.name }}")
                    |{{ pagePart.name }}